<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.landingScreen.SecondLandingFragment">

    <ImageView
        android:id="@+id/img_second_landing"
        android:layout_width="@dimen/img_second_landing_width"
        android:layout_height="@dimen/img_second_landing_height"
        android:layout_marginTop="@dimen/img_second_landing_margin_top"
        android:src="@drawable/ic_landing_page_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title_second_landing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_title_second_landing_margin_top"
        android:text="@string/text_second_landing_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_title_second_landing_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_second_landing" />

</androidx.constraintlayout.widget.ConstraintLayout>